<%-include("parts/h") %>
<!--vars: cat-->
<div class="container ed">
<form action="/<%=cat%>" method="POST">
    <h2>Create a new <%=cat%> book</h2>
    
  <div class="form-group">
    <select class="form-control" name="book[current]">
      <option>romance</option>
      <option>reference</option>
      <option>fantasy</option>
      <option>horror</option>
      <option>english</option>
    </select>
  </div>
  <div class="form-group">
    <input class="form-control" type="text" placeholder="name" name="book[name]" />
  </div>    
  <div class="form-group">
    <input class="form-control" type="text" placeholder="writer" name="book[writer]" />
  </div> 
  <div class="form-group">
    <input class="form-control" type="text" placeholder="img" name="book[img]" />
  </div>
  <div class="form-group">
    <input class="form-control" type="number" placeholder="price" name="book[price]" />
  </div>
  <div class="form-group">
    <input class="form-control" type="text" placeholder="category" name="book[category]" />
  </div>
  <div class="form-group">
    <textarea class="form-control" placeholder="summary" name="book[summary]"></textarea>
  </div>
  <div class="form-group">
    <select class="form-control" name="book[series]"><option value="true">true</option>
    <option value="false">false</option>
    </select>
  </div>


  <div class="form-group">
    <input type="submit" class="form-control">
  </div>

  </div>
</form>
</div>
<%-include("parts/footer") %>
