<%-include("parts/h") %>
<!--ejs vars: cat, catBooks, arrBooks -->

<div class="container">
  <form class="form-inline" action="/search/b/book" method="POST">
    <button class="sercButton" type="submit">
      <i class="fa fa-search"></i>
    </button>
    <input
      type="search"
      class="search"
      placeholder="חפש/י ספר או מחבר/ת"
      name="s"
    />
  </form>
  <div style="margin-top: 3%" class="container">
    <form
      target="paypal"
      action="https://www.paypal.com/cgi-bin/webscr"
      method="post"
    >
      <input type="hidden" name="cmd" value="_s-xclick" />
      <input
        type="hidden"
        name="encrypted"
        value="-----BEGIN PKCS7----------END PKCS7-----"
      />
      <input
        type="image"
        src="https://www.paypalobjects.com/he_IL/i/btn/btn_viewcart_LG.gif"
        border="0"
        name="submit"
        alt="PayPal - הדרך הקלה והבטוחה יותר לשלם באינטרנט!"
      />
      <img
        alt=""
        border="0"
        src="https://www.paypalobjects.com/he_IL/i/scr/pixel.gif"
        width="1"
        height="1"
      />
    </form>
  </div>
  <% if (cat == "english"){ var c = "אנגלית" } else if (cat == "reference"){ var
  c = "עיון" } else if (cat == "romance"){ var c = "רומנטיקה" } else if (cat ==
  "fantasy"){ var c ="פנטזיה" } else{ var c = "מתח/ אימה" } %>
  <h1 class="cat">ספרי <%= c%></h1>
  <a href="/<%=cat%>/punchie">add a book</a>
  <hr />
  <div class="container">
    <% catBooks.forEach(function(book){ %>
    <a
      class="kat text-center col-lg-3 col-md-4 col-sm-6 thumbnail c"
      href="/<%=cat%>/<%=book._id%>"
      ><img src="<%=book.img %>" />
      <div class="centered">
        <p>
          <b><%= book.name %> </b>
          <br />
          <%= book.writer %>

          <br />
          <%= book.price %>₪
        </p>
      </div>
    </a>
    <%})%>
  </div>
</div>

<%-include("parts/footer") %>
