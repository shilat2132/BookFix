<%-include("parts/h") %>
<!--vars: arr-->
<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 2px solid #dddddd;
    padding: 8px;
    text-align: right;
  }

  th {
    border: 3px solid black;
  }
  tr:nth-child(2n) {
    background-color: #dddddd;
  }
</style>
<div
  style="text-align: right; color: black; text-shadow: none"
  class="container"
>
  <h1>הזמנות</h1>
  <hr />
  <div class="container">
    <table>
      <thead>
        <tr>
          <th>שם </th>
          <th>פלאפון</th>
          <th>כתובת</th>
          <th>שם הספר/ים</th>
          <th>תאריך ההזמנה</th>
          <th>מחיקת הזמנה</th>
        </tr>
      </thead>
      <tbody>
        <% arr.forEach(function(or){%>
        <tr>
          <td><%=or.name %></td>
          <td><%=or.phone %></td>
          <td><%=or.address %></td>
          <td><%=or.books %></td>
          <td><%=or.date.toDateString() %></td>
          <td>
            <form
              action="/shenip/orders/<%=or._id%>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger" style="width: 70%">
                <b>Delete</b>
              </button>
            </form>
          </td>
        </tr>

        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<%-include("parts/footer") %>
