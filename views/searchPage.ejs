<div class="container">
  <form class="form-inline" action="/search/b/book" method="POST">
    <button type="submit">
      <i class="fa fa-search"></i>
    </button>
    <input
      type="search"
      class="search"
      placeholder="חפש/י ספר או מחבר/ת"
      name="s"
    />
  </form>

  <h1 class="cat">מציג תוצאות עבור: <span id="s"><%= s %></span></h1>
  <hr />
  <div class="container">
    <% for(var i = 0; i< arrBooks.length; i++){
      if(arrBooks[i].name.includes(s) || arrBooks[i].writer.includes(s)){
        bo = true%>
        <div class="arrBooks">
          <a
          class="kat text-center col-lg-3 col-md-4 col-sm-6 thumbnail c"
          href="/search/<%=arrBooks[i]._id%>"
          ><img src="<%=arrBooks[i].img %>" />
          <div class="centered">
            <p>
              <b ><span class="name"><%= arrBooks[i].name %> </span></b>
              <br />
              <span class="writer"><%= arrBooks[i].writer %></span>
    
              <br />
              <% if (arrBooks[i].price > 39){%>
                <span style="color: red; text-decoration: line-through;"> <%= arrBooks[i].price %>₪</span>
                <br>
      
                <%} %>
                39₪            </p>
          </div>
        </a> </div> 
      <%}} %>

