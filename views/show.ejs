<script>
  function fu() {
    var payment = document.querySelector(".payment");
    var arroworder = document.querySelector(".arroworder");
    if (payment.style.display == "block") {
      arroworder.classList.remove("fa-chevron-up");
      arroworder.classList.add("fa-chevron-down");
      payment.style.display = "none";
    } else {
      arroworder.classList.remove("fa-chevron-down");
      arroworder.classList.add("fa-chevron-up");
      payment.style.display = "block";
    }
  }
  function taks() {
    var sump = document.querySelector(".sump");

    var arrow = document.querySelector(".arrow");

    if (sump.style.display == "none") {
      arrow.classList.remove("fa-chevron-down");
      arrow.classList.add("fa-chevron-up");
      sump.style.display = "block";
    } else {
      sump.style.display = "none";
      arrow.classList.remove("fa-chevron-up");
      arrow.classList.add("fa-chevron-down");
    }
  }
</script>
