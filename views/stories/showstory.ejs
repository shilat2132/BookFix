<script>
    function explain(){
        var exp = document.querySelector("#explain")
        if(exp.style.display =="none"){
            exp.style.display = "block"
        } else{
            exp.style.display = "none"
        }
    }

    function firstch(){
        var firstChapter = document.querySelector(".firsts")
        var summary = document.querySelector(".innersum")
        var takB = document.querySelector(".tak")
        var chapButton = document.querySelector(".chapButton")
            firstChapter.style.display = "block"
            summary.style.display = "none"
            chapButton.style.backgroundColor  = "#AFEEEE"
            takB.style.backgroundColor  = "white"
    }
    function taksir(){
        var firstChapter = document.querySelector(".firsts")
        var summary = document.querySelector(".innersum")
        var takB = document.querySelector(".tak")
        var chapButton = document.querySelector(".chapButton")
                    summary.style.display = "block"
                    firstChapter.style.display = "none"
            chapButton.style.backgroundColor  = "white"
            takB.style.backgroundColor  = "#AFEEEE"
    }
    

</script>
